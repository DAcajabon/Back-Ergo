  "license": "MIT",
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register src/index.ts",
    "dev": "nodemon",
    "build": "tsc"
  },
  "devDependencies": {
    "nodemon": "^1.19.0",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "@types/express": "^4.16.1",
    "express": "^4.16.4"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
